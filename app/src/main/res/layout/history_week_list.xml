<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="11dp"
    android:paddingTop="8dp"
    android:paddingBottom="9dp"
    android:background="@drawable/history_list_rectangle"
    android:elevation="5dp">

    <TextView
        android:id="@+id/week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#191919"
        android:text="1주차"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/week"
        android:background="@drawable/day_button"
        android:textStyle="normal"
        android:textSize="11sp"
        android:textColor="#2fdb7a"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintEnd_toStartOf="@id/btn3"
        app:layout_constraintTop_toBottomOf="@id/week"
        android:background="@drawable/day_button"
        android:textStyle="normal"
        android:textSize="11sp"
        android:textColor="#2fdb7a"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintEnd_toStartOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/week"
        android:background="@drawable/day_button"
        android:textStyle="normal"
        android:textSize="11sp"
        android:textColor="#2fdb7a"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/week"
        android:background="@drawable/day_button"
        app:layout_constraintHorizontal_weight="1"
        android:text="6/10"
        android:textStyle="normal"
        android:textSize="11sp"
        android:textColor="#2fdb7a"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn6"
        app:layout_constraintTop_toBottomOf="@id/week"
        android:background="@drawable/day_button"
        android:textStyle="normal"
        android:textSize="11sp"
        android:textColor="#2fdb7a"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintEnd_toStartOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/week"
        android:background="@drawable/day_button"
        android:textStyle="normal"
        android:textSize="11sp"
        android:textColor="#2fdb7a"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/week"
        android:background="@drawable/day_button"
        android:textStyle="normal"
        android:textSize="11sp"
        android:textColor="#2fdb7a"/>

    <Button
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:text="결과공유"
        android:minWidth="0dp"
        android:background="@drawable/share_btn"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="8dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        android:layout_marginTop="10dp"
        android:background="#f5f5f5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="normal"
            android:textSize="11sp"
            android:textColor="#191919"
            android:text="@string/week_money"/>

        <TextView
            android:id="@+id/won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#191919"
            android:text="@string/won"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#191919"
            app:layout_constraintEnd_toStartOf="@id/won"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>