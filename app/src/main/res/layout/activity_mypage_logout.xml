<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="215dp"
    android:layout_height="150dp"
    tools:context=".Mypage_logout"
    android:background="@drawable/round_corners"
    android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_error_outline_24"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그아웃 하실건가요?"
                android:textColor="#C12E2E"
                android:textSize="17dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="5dp">
            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_bottom_left_corner"
                    android:backgroundTint="#ECECEC"
                    android:baselineAligned="false"
                    android:text="아니"
                    android:textColor="#7A7A7A"
                    android:textStyle="bold">


                </Button>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#C12E2E"
                    android:text="로그아웃"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/round_bottom_right_corner">

                </Button>
            </LinearLayout>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>